  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%#= render 'shared/flashes' %>
    <% if current_page?(root_path) %>
      <div class="main-container-home">
    <% else %>
      <div class="main-container">
    <% end %>
        <%= yield %>
      </div>

    <% unless current_page?(root_path) %>
      <%= render "shared/footer" %>
    <% end %>

  </body>
</html>
