<%= simple_form_for video, remote: true, html: { id: 'create-video-form', class: 'needs-validation', novalidate: true } do |f| %>
  <div class="mb-3">
    <%= f.input :title,
                label: "<strong>Titre</strong>".html_safe,
                placeholder: 'Entrez le titre de la vidéo',
                wrapper_html: { class: 'mb-3' },
                input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= f.input :description,
                label: "<strong>Description</strong>".html_safe,
                placeholder: 'Décrivez le contenu de la vidéo',
                wrapper_html: { class: 'mb-3' },
                input_html: { class: 'form-control', rows: 3 } %>
  </div>

  <div class="mb-3">
    <%= f.input :url,
                label: "<strong>Lien Vimeo</strong>".html_safe,
                placeholder: 'https://vimeo.com/...',
                wrapper_html: { class: 'mb-3' },
                input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <label class="form-label"><strong>Catégories</strong></label>
    <div class="d-flex flex-column gap-2">
      <% categories.each do |category| %>
        <div class="form-check">
          <%= check_box_tag "video[category_ids][]",
                            category.id,
                            video.category_ids.include?(category.id),
                            class: "form-check-input",
                            id: "video_#{video.persisted? ? video.id : "create"}_category_ids_#{category.id}" %>
          <%= label_tag "video_#{video.persisted? ? video.id : "create"}_category_ids_#{category.id}",
                        category.name,
                        class: "form-check-label" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.input :photo,
                as: :file,
                label: '<strong>Vignette</strong>'.html_safe,
                hint: "<small class='form-text text-muted'>Idéalement : PNG - 16/9 - 700px de large - 72ppp</small>".html_safe,
                wrapper_html: { class: 'mb-3' },
                input_html: { class: 'form-control' } %>
  </div>

  <div class="d-grid">
    <%= f.submit 'Enregistrer', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
