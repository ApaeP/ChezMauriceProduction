<div class="navbar-container">
  <div id="banner-bckgrnd-white"></div>
  <div id="home-menu-banner">
    <div id="inner-menu">
      <div class="center-menu-elements">

        <div class="left-menu-elements">
          <% unless current_page?(root_path) %>
            <%= link_to root_path do %>
              <%= image_tag "PA-LOGO_2020_300px.png", alt: "navbar-logo", id: 'home-navbar-logo' %>
            <% end %>
          <% end %>
        </div>

        <div id="home-menu-links">

          <% if current_page?(root_path) %>
            <p id="accueil-link" class="menu-link">ACCUEIL</p>
