            <%= link_to "https://www.linkedin.com/company/chezmauriceproduction/", target: '_blank', class: 'sn-links' do %>
            <p><i class="fab fa-linkedin"></i></p>
            <% end %>
            <%= link_to "https://vimeo.com/chezmauriceproduction/", target: '_blank', class: 'sn-links' do %>
              <p><i class="fab fa-vimeo"></i></p>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

