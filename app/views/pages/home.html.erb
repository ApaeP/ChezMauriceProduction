<div class="general-layout">

  <!-- ########################################################################################################################## -->
  <!-- HOME PAGE -->
  <!-- ########################################################################################################################## -->
  <div class="homepage">

    <%= video_tag 'Panda_Video_Overlay_LOOPED.mp4',
                   poster: 'PA-LOGO_2020_poster_3072x1920.png',
                   autoplay: false,
                   playsinline: true,
                   muted: true,
                   loop: true,
                   controls: false,
                   type: 'video/mp4',
                   id: 'home-video' %>
    <div id="video-opacity"></div>

    <div id="home-banner-overlay">
      <%= render 'shared/navbar' %>
      <!-- <h1 id="home-banner-title">CHEZ MAURICE PRODUCTION</h1> -->
      <%= image_tag "PA-LOGO_2020_900px_50p.png", alt: "Logo homepage", id: 'homepage-logo' %>
      <h2 id="home-banner-catchphrase">SUBLIMEZ VOS IDÉES</h2>

    </div>


  </div>
  <!-- ########################################################################################################################## -->
  <!-- END OF HOME PAGE -->
  <!-- ########################################################################################################################## -->

  <!-- ########################################################################################################################## -->
  <!-- GALLERY PAGE -->
  <!-- ########################################################################################################################## -->
  <div id="gallery-page">

    <div id="home-menu">
      <div id="inner-menu">
        <div class="center-menu-elements">

          <div class="left-menu-elements">

            <%= image_tag "PA-LOGO_2020_300px.png", alt: "navbar-logo", class: 'home-navbar-logo close-gallery-link' %>
          </div>

          <div id="home-menu-links">
            <p id="home-link" class="menu-link close-gallery-link">ACCUEIL</p>
            <p class="menu-link gallery-link">PRODUCTIONS</p>
            <p class="menu-link info-link">À PROPOS</p>
            <p class="menu-link contact-link">CONTACT</p>
          </div>

          <div class="right-menu-elements">
            <div id="social-links">
              <p><i class="fab fa-facebook"></i></p>
              <p><i class="fab fa-instagram"></i></p>
              <p><i class="fab fa-vimeo"></i></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="gallery-scrollable-content">

      <div class="gallery-container">
        <h3 style="text-align: center; margin-top: 12vh; margin-bottom: 5vh;">NOS PRODUCTIONS</h3>
        <div class="gallery-grid d-flex flex-wrap justify-content-center">
          <% 12.times do %>
            <div class="card" style="background-color: yellow; width: 24vw; height: 12vw; min-width: 150px;">

            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
  <!-- ########################################################################################################################## -->
  <!-- END OF GALLERY PAGE -->
  <!-- ########################################################################################################################## -->

  <!-- ########################################################################################################################## -->
  <!-- CONTACT PAGE -->
  <!-- ########################################################################################################################## -->
  <div id="contact-page">

    <div id="home-menu">
      <div id="inner-menu">
        <div class="center-menu-elements">

          <div class="left-menu-elements">

            <%= image_tag "PA-LOGO_2020_300px.png", alt: "navbar-logo", class: 'home-navbar-logo close-contact-link' %>
          </div>

          <div id="home-menu-links">
            <p id="home-link" class="menu-link close-contact-link">ACCUEIL</p>
            <p class="menu-link gallery-link">PRODUCTIONS</p>
            <p class="menu-link info-link">À PROPOS</p>
            <p class="menu-link contact-link">CONTACT</p>
          </div>

          <div class="right-menu-elements">
            <div id="social-links">
              <p><i class="fab fa-facebook"></i></p>
              <p><i class="fab fa-instagram"></i></p>
              <p><i class="fab fa-vimeo"></i></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="contact-scrollable-content">

      <div class="contact-container">

        <div class="contact-page-top">
          <div class="contact-top-left">
            <h1>CHEZ MAURICE. <br>PRODUCTION</h1>
          </div>
          <div class="contact-top-right">

          </div>
        </div>
        <div class="contact-page-mid">
          <%= simple_form_for(@contact) do |f| %>
            <%= f.input :name, label: false, placeholder: 'Nom', input_html: { class: 'form-contact-input' } %>
            <%= f.input :email, label: false, placeholder: 'Email', input_html: { class: 'form-contact-input' } %>
            <%= f.input :content, label: false, placeholder: 'Message', input_html: { class: 'form-contact-input' } %>
            <%= f.input :phone, label: false, placeholder: 'Téléphone', input_html: { class: 'form-contact-input' } %>
            <%= f.submit "Envoyer" %>
          <% end %>
        </div>
        <div class="contact-page-bottom">
          <div class="contact-bottom-left">
            <p>
              CHEZ MAURICE. PRODUCTION<br>
              77 avenue Philippe Auguste<br>
              75011, PARIS<br>
            </p>
          </div>
          <div class="contact-bottom-right">
            <h2>Ici une carte</h2>
          </div>
        </div>

      </div>

    </div> <!-- <div id="contact-scrollable-content"> -->


  </div>
  <!-- ########################################################################################################################## -->
  <!-- END OF CONTACT PAGE -->
  <!-- ########################################################################################################################## -->

  <!-- ########################################################################################################################## -->
  <!-- INFO PAGE -->
  <!-- ########################################################################################################################## -->
  <div id="info-page">

    <div id="home-menu">
      <div id="inner-menu">
        <div class="center-menu-elements">

          <div class="left-menu-elements">

            <%= image_tag "PA-LOGO_2020_300px.png", alt: "navbar-logo", class: 'home-navbar-logo close-info-link' %>
          </div>

          <div id="home-menu-links">
            <p id="home-link" class="menu-link close-info-link">ACCUEIL</p>
            <p class="menu-link gallery-link">PRODUCTIONS</p>
            <p class="menu-link info-link">À PROPOS</p>
            <p class="menu-link contact-link">CONTACT</p>
          </div>

          <div class="right-menu-elements">
            <div id="social-links">
              <p><i class="fab fa-facebook"></i></p>
              <p><i class="fab fa-instagram"></i></p>
              <p><i class="fab fa-vimeo"></i></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="info-scrollable-content">

    </div>
  </div>
  <!-- ########################################################################################################################## -->
  <!-- END OF INFO PAGE -->
  <!-- ########################################################################################################################## -->

</div>

