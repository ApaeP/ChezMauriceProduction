<div class="general-layout">

  <!-- HOME PAGE -->
  <div class="homepage">

    <%= video_tag 'bckgrnd_video.mp4',
                   # poster: 'PA-LOGO_2020_poster_3072x1920.png',
                   autoplay: false,
                   playsinline: true,
                   muted: true,
                   loop: true,
                   controls: false,
                   type: 'video/mp4',
                   id: 'home-video' %>
    <div id="video-opacity"></div>

    <div id="home-banner-overlay">
      <%= render 'shared/navbar' %>
      <!-- <h1 id="home-banner-title">CHEZ MAURICE PRODUCTION</h1> -->
      <%= image_tag "PA-LOGO_2020_900px_50p.png", alt: "Logo homepage", id: 'homepage-logo' %>
      <h2 id="home-banner-catchphrase">SUBLIMEZ VOS IDÉES</h2>

    </div>


  </div>
  <!-- END OF HOME PAGE -->

  <!-- GALLERY PAGE -->
  <div id="gallery-page">

    <div id="home-menu">
      <div id="inner-menu">
        <div class="center-menu-elements">

          <div class="left-menu-elements">

            <%= image_tag "PA-LOGO_2020_300px.png", alt: "navbar-logo", class: 'home-navbar-logo close-gallery-link' %>
          </div>

          <div id="home-menu-links">
            <p id="home-link" class="menu-link close-gallery-link">ACCUEIL</p>
            <p class="menu-link gallery-link">PRODUCTIONS</p>
            <p class="menu-link info-link">À PROPOS</p>
            <p class="menu-link contact-link">CONTACT</p>
            <% if user_signed_in? %>
              <%= link_to "DECONNEXION", destroy_user_session_path, method: :delete, id: "log-out-link" %>
            <% end %>
          </div>

          <div class="right-menu-elements">
            <div id="social-links">
              <%= link_to "https://facebook.com/chezmauriceproduction/", target: '_blank', class: 'sn-links' do %>
                <p><i class="fab fa-facebook"></i></p>
              <% end %>
              <%= link_to "https://www.instagram.com/chezmauriceproduction/", target: '_blank', class: 'sn-links' do %>
                <p><i class="fab fa-instagram"></i></p>
              <% end %>
              <%= link_to "https://www.linkedin.com/company/chezmauriceproduction/", target: '_blank', class: 'sn-links' do %>
              <p><i class="fab fa-linkedin"></i></p>
              <% end %>
              <%= link_to "https://vimeo.com/chezmauriceproduction/", target: '_blank', class: 'sn-links' do %>
                <p><i class="fab fa-vimeo"></i></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="gallery-scrollable-content">

      <div class="gallery-container">
        <% if user_signed_in? %>
          <h3 style="text-align: center; margin-top: 12vh; margin-bottom: 2vh;">NOS PRODUCTIONS</h3>
          <h5 id="add-video-button">AJOUTER UNE VIDEO</h5>
        <% else %>
          <h3 style="text-align: center; margin-top: 12vh; margin-bottom: 5vh;">NOS PRODUCTIONS</h3>
        <% end %>
        <div class="gallery-grid d-flex flex-wrap justify-content-center">
          <% @videos.each_with_index do |video, i| %>
            <div class="video-card card-<%= i %>" >

              <!-- background-image: url('<%#= cl_image_path @video.photo.key, height: 300, width: 400, crop: :fill %>')" -->
              <!-- background-image: url('<%#= url_for(elem.photo) %>'); -->
              <% if video.photo.attached? %>
                <div class="thumbnail-div" style="background-image: url(<%= url_for(video.photo) %>)"></div>
              <% else %>
                <div class="thumbnail-div" style="background-image: url(<%= asset_path('videofiller.png') %>);"></div>
              <% end %>
              <div class="thumbnail-overlay" data-videoid="<%= video.vimeo.id %>" data-videotitle="<%= video.title %>" data-videodesc="<%= video.description %>">
                <p class="thumbnail-overlay-title"><%= video.title.upcase %></p>
              </div>

              <!-- <div data-vimeo-url="<%#= video.url %>" data-vimeo-width="640" data-vimeo-dnt="true" data-vimeo-responsive="true" data-vimeo-controls="false" id="<%#= video.name %>"></div> -->
            </div>
          <% end %>

        </div>
      </div>

    </div>
  </div>
  <!-- END OF GALLERY PAGE -->

  <!-- CONTACT PAGE -->
  <div id="contact-page">

    <div id="home-menu">
      <div id="inner-menu">
        <div class="center-menu-elements">

