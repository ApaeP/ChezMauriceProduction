          </div>
        </div>
        <div class="contact-page-form">
          <%= simple_form_for(@contact) do |f| %>
            <%= f.input :name, label: false, placeholder: 'Nom', input_html: { class: 'form-contact-input' } %>
            <%= f.input :company, label: false, placeholder: 'Votre société', input_html: { class: 'form-contact-input' } %>
